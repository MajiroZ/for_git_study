      "source": [
        "def paper_length(distance, thickness):\n",
        "  import math\n",
        "  folded_thickness, count = paper_fold_count(distance, thickness)\n",
        "  return math.pi * thickness * (2**count + 4) * (2**count - 1) / 6"
