      "cell_type": "code",
      "source": [
        "def paper_fold_count(distance, thickness):\n",
        "  folded_thickness = thickness\n",
        "  for i in range(10000):\n",
        "    folded_thickness = folded_thickness * 2\n",
        "    if folded_thickness > distance:\n",
        "      break\n",
        "  return folded_thickness, i+1"
      ],
